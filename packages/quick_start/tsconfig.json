{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "incremental": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "lib":["es2016"]
    },
    
   "include": [
        "./source",
        "./source/*.ts"

    ],
    "exclude": [
        "node_modules",
        "*.d.ts",
        "**/*.d.ts"
    ]
}

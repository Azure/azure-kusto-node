{
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "exampleBrowser.ts"
    ],
    "compilerOptions": {
        "rootDir": ".",
        "declarationDir": "./types",
        "esModuleInterop": true,
        "outDir": "./dist-esm",

{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "prepublish": "npm run build",
        "exampleData": "npm run build && node packages/azure-kusto-data/example.js",
        "exampleIngest": "npm run build && node packages/azure-kusto-ingest/example.js",
        "lint": "eslint -c .eslintrc.js --ext .ts .",
        "test": "mocha --parallel",
        "testE2E": "mocha -- --grep \"E2E Tests\"",
        "testNoE2E": "npm run test",
        "testData": "npm run test -- --exclude !packages/azure-kusto-ingest/test/e2eTests/**",
        "testIngest": "npm run test -- --exclude !packages/azure-kusto-ingest/**",
        "testIngestNoE2E": "npm run testNoE2E -- --exclude !packages/azure-kusto-ingest/**",
        "testPipeline": "nyc --reporter lcovonly mocha --reporter mocha-junit-reporter --reporter-options outputs=true",
        "format": "npx prettier --write .",
        "checkFormat": "npx prettier --check --end-of-line lf .",
        "webpack": "npm run build && shx cp packages/azure-kusto-ingest/index.html packages/azure-kusto-ingest/dist-esm/ &&  webpack-dev-server",
        "clean": "cd packages/azure-kusto-data && npm run clean && cd ../azure-kusto-ingest && npm run clean",
        "webpackBuild": "webpack configtest &&npm run build && shx cp packages/azure-kusto-ingest/index.html packages/azure-kusto-ingest/dist-esm/ && webpack --mode=production"
    },
    "devDependencies": {
        "@lerna-lite/cli": "^1.10.0",
        "@lerna-lite/run": "^1.10.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^14.0.0",
        "@types/webpack-dev-server": "^4.7.2",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-jsdoc": "^39.3.4",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "instant-mocha": "^1.5.0",
        "mocha": "^10.0.0",
        "mocha-junit-reporter": "^2.0.2",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "sinon": "^14.0.0",
        "stream-browserify": "^3.0.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "webpack-cli": "^4.10.0"
    },
    "workspaces": [
        "packages\\azure-kusto-data",
        "packages\\azure-kusto-ingest",
        "packages\\quick_start"
    ]
}

{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "incremental": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "inlineSources": true
    },
    "include": [
        "webpack.config.ts"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts"
    ],
    "baseUrl": ".",
    "paths": {
        "~*": ["./*"],
    }
}

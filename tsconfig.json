{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "incremental": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outDir": "./dist"
    },
    "include": ["**/source/**/*.ts", "**/test/**/*.ts", "index.ts"],
    "exclude": ["dist"]
}

{
    "compilerOptions": {
        "target": "ES2023",
        "module": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "incremental": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedParameters": true,
        "inlineSources": true,
        "lib": ["ES2023", "DOM"],
    },
    "include": [
        "webpack.config.ts"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts"
    ]
}

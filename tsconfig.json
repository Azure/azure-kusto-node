{
    "compilerOptions": {
        "target": "ES2017",
        "module": "es6",
        "esModuleInterop": true,
        "strict": true,
        "incremental": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": ["**/src/**/*.ts", "**/test/**/*.ts", "**/index.ts"],
    "exclude": ["*.d.ts"]
}
